#include <iostream>
#include <utility>
using namespace std;
/* Utility function to print an array */
void printArray(int arr[], int size, string message)
{
    cout<<message<<": ";
   for (int i = 0; i < size; i++)
   cout << arr[i] << " ";
 
   cout << endl;
}

void rearrange(int arr[], int size){
    int negative=0, positive=size-1;
    while(negative<=positive){
        if(arr[negative]>0){
            swap(arr[negative],arr[positive]);
            positive--;
        }
        else if(arr[positive]<0){
            swap(arr[negative],arr[positive]);
            negative++;
        }
        if(arr[negative]<0){
            negative++;
        }
        if(arr[positive]>0){
            positive--;
        }
        
    }
     
     
    positive=negative;
    int dividor=negative;
    negative=0;
    
    //Positive numbers should be in even position and negative numbers should be in odd positions
    while(positive<size){
        if(negative%2==0){
            swap(arr[negative],arr[positive]);
            negative++;
            positive++;
        }
        else{
            negative++;
        }
    }
    
}
int main() {
    
    int arr[] = {-12, 11, -13, -5, 6, -7, 5, -3, 11};

     rearrange(arr,9);
     printArray(arr,9,"ans");
     

    return 0;
}
