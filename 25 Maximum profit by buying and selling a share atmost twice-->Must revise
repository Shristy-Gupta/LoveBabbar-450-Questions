//https://www.youtube.com/watch?v=gVavspgEHyM
class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int n=prices.size();
        if(n<=0){
            return 0;
        }
        int fb=INT_MIN,sb=INT_MIN;
        int fs=0,ss=0;
        for(int i=0;i<n;i++){
            fb=max(fb,-prices[i]);
            fs=max(fs,prices[i]+fb);
            sb=max(sb,fs-prices[i]);
            ss=max(ss,sb+prices[i]);
        }
        return ss;
        
    }
};
